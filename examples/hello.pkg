pkgname=hello
pkgver=2.12
pkgrel=1
source=("https://ftp.gnu.org/gnu/hello/hello-$pkgver.tar.gz")
depends=()

prepare() {
    tar xf "hello-$pkgver.tar.gz"
}

build() {
    cd "hello-$pkgver"
    ./configure --prefix=/usr
    make
}

package() {
    cd "hello-$pkgver"
    make DESTDIR="$pkgdir" install
}
